<%- include('./partials/header') %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="text-center">Add Users</h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="" class="form-label">Username</label>
                        <input type="text" class="form-control" name="Username" placeholder="Username"><br>
                        <label for="" class="form-label">Password</label>
                        <input type="text" class="form-control" name="Password" placeholder="Password"><br>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-6 mt-5">
                <h2 class="text-center">List Users</h2>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Username</th>
                            <th>Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i=1 %>
                        <% data.forEach((item)=>{ %>
                            <tr>
                                <td><%= i++ %></td>
                                <td><%= item.Username %></td>
                                <td><%= item.Password %></td>
                                <td><form action="/users/delete/<%= item._id %>" method="post" class="d-inline">
                                    <button type="submit" class="btn">
                                    <i class="fas fa-trash text-danger"></i>
                                    </button>
                                </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>